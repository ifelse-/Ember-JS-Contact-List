/******** Reusable Ends **********/


.instructions {
  position: absolute
  opacity: 0
}

.contacts-wrapper {
  border: standardBorder
  /*display: flex
  flex-grow: 1*/
  margin: 1em
  border-radius: 3px
  position: relative
  

  .contact-detail {
    flex: 5 1 auto
    
     .contact-details {
      padding: 1em
      /*width: 457px*/

      .section-title {
        font-size: 1.2em
        text-transform: uppercase
        color: fontColor
        margin-bottom: 0.5em
      }

      .contact-items {
        font-size: 1em

        td {
          padding: 0.75em 0.5em
          vertical-align: center
        }

        td.icon {
          padding-left: 0
          font-size: 1.5em
          color: accentBlue
        }
      }
    }
  }
  

  .contact-search {
    border-right: standardBorder
    background: backgroundColor
    flex: 1 1 auto
    display: flex
    flex-direction: column

    .search-wrapper {
      flex: 0 0 auto
      border-bottom: standardBorder
      display: flex

      input {
        flex-grow: 1
        border: 0px !important
        outline: none
        margin: 0
        padding: 1em
        background: #eaeff7
      }
    }

    .contacts-list {
      flex: 1 1 auto
      overflow: scroll
    }
    
     li {
      text-decoration: none
      color: #000
      -webkit-transition: font-size 0.3s ease, background-color 0.3s ease
      -moz-transition: font-size 0.3s ease, background-color 0.3s ease
      -o-transition: font-size 0.3s ease, background-color 0.3s ease
      -ms-transition: font-size 0.3s ease, background-color 0.3s ease
      transition: font-size 0.3s ease, background-color 0.3s ease
      /*width: 637px*/
    }


    li:hover {
      font-size: 30px
      background: #8dc5d6
    }

  }
}

.contact {
  display: flex
  align-items: center
  position: relative
  border-bottom: standardBorder

  .photo-wrapper {
    margin: 0.5em
    height: 2em
    width: 2em
    border-radius: 2em
    overflow: hidden
    position: relative
    border: 2px solid #fff

    img {
      max-width: 100%
      max-height: 100%
    }
  }

  .information {
    margin: 0.5em

    h2 {
      margin-bottom: 0.4em
    }

    p {
      font-size: 0.7em
    }
  }

  &.contact-banner {
    background: accentBlue
    padding: 0.5em
    color: white
  }

  &.selectable {
    cursor: pointer
    user-select: none

    &:before {
      position: absolute
      left: 0
      top: 0
      bottom: 0
      width: 3px
      background: rgba(0,0,0,0)
      content: ' '
    }

    &:hover:before {
      background: lighten(accentBlue, 50%)
      padding
      
    }

    &.active:before {
      background: accentBlue
    }
  }
}


.container-top {
  margin-top: 6em
  overflow: scroll
}

