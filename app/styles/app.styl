/******** Form **********/


.form-group label {
  font-size:14px
  margin-bottom:10px
  font-weight:bold
}

/******** Form End **********/

.slide-panel {
    background: #f90 none repeat scroll 0 0
    color: #000
    height: 100%
    left:-1000px
    position: absolute
    top: 0
    width: 40%
    z-index: 2
    padding:5em 55px 20px
    -webkit-box-shadow: 16px 11px 32px -19px rgba(0,0,0,0.75);
    -moz-box-shadow: 16px 11px 32px -19px rgba(0,0,0,0.75);
    box-shadow: 16px 11px 32px -19px rgba(0,0,0,0.75);
    
     h1 {
       color:#000
       font-size:24px
     }
     
}

.close-panel {
  text-align: right
  margin-bottom:1em
}

.info-content {
    h4 {
      color:#449D44
      margin-bottom:5px
    }
    
    p {
      margin-bottom:25px
      line-height: 23px
    }
}

/******** Slide Panel End **********/



/*********** Mobile **********/
@media only screen and (max-device-width: 480px) {
   
     .btn-block {
      font-size:12px
     }
     
     .rwd-break {
      display:block
      margin-top:10px
     }
     
     .contact-search {
       
       li {
      text-decoration: none
      color: #000
      -webkit-transition: font-size 0.1s ease, background-color 0.3s ease
      -moz-transition: font-size 0.1s ease, background-color 0.3s ease
      -o-transition: font-size 0.1s ease, background-color 0.3s ease
      -ms-transition: font-size 0.1s ease, background-color 0.3s ease
      transition: font-size 0.1s ease, background-color 0.3s ease
      /*width: 637px*/
      }

       li:hover {
        font-size: 20px !important
        background: #8dc5d6
       }
       
     }
     
     .slide-panel { 
       width:100%
       padding: 10em 55px 20px;
       overflow:scroll
     }

  }
  

